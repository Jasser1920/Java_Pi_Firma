<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterReponseReclamationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="ID de Réclamation :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <TextField fx:id="reclamationIdFx" promptText="Entrez l'ID de la réclamation" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />
        <Label text="Message :" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <TextArea fx:id="messageFx" prefHeight="150.0" wrapText="true" promptText="Entrez le message de la réponse" style="-fx-border-color: #ccc; -fx-border-radius: 5;" />
        <Button onAction="#AjouterReponse" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        <Button onAction="#AnnulerReponse" text="Annuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </children>
</VBox>