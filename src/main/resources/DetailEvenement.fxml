<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailEvenementController">

    <children>

        <Label layoutX="30.0" layoutY="80.0" text="Titre:" />
        <TextField fx:id="titreField" layoutX="150.0" layoutY="75.0" prefWidth="300.0" style="-fx-background-color: transprent; -fx-border-width: 0px 0px 1px; -fx-border-color: #85c20a;" />

        <Label layoutX="30.0" layoutY="120.0" text="Description:" />
        <TextArea fx:id="descriptionArea" layoutX="150.0" layoutY="115.0" prefHeight="80.0" prefWidth="300.0" style="-fx-background-color: transprent;" />

        <Label layoutX="30.0" layoutY="210.0" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="150.0" layoutY="205.0" prefWidth="200.0" style="-fx-background-color: transprent;" />

        <Label layoutX="30.0" layoutY="250.0" text="Lieu:" />
        <TextField fx:id="lieuxField" layoutX="150.0" layoutY="245.0" prefWidth="300.0" style="-fx-background-color: transprent; -fx-border-width: 0px 0px 1px; -fx-border-color: #85c20a;" />

        <Button fx:id="btnModifier" layoutX="269.0" layoutY="317.0" onAction="#modifierEvenement" style="-fx-background-color: #ffb524; -fx-background-radius: 20;" text="Modifier" textFill="#45595b" />
        <Button fx:id="btnSupprimer" layoutX="343.0" layoutY="317.0" onAction="#supprimerEvenement" style="-fx-background-color: #ff6b6b; -fx-background-radius: 20;" text="Supprimer" textFill="#f8f8f8" />
