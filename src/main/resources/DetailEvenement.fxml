        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#85c20a" height="33.0" layoutX="74.0" layoutY="24.0" stroke="#85c20a" strokeType="INSIDE" style="-fx-arc-height: 300; -fx-arc-width: 30;" width="516.0" />
        <Label layoutX="89.0" layoutY="29.0" text="Détail de l'évènement" textFill="#f8f8f8">
            <font>
                <Font name="Arial Rounded MT Bold" size="20.0" />
            </font>
        </Label>
        <Button fx:id="retourFX" layoutX="30.0" layoutY="25.0" mnemonicParsing="false" onAction="#retour" style="-fx-background-color: #85c20a; -fx-background-radius: 100;" text="⬅" textFill="#f8f8f8">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#45595b" height="15.0" layoutY="385.0" stroke="#45595b" strokeType="INSIDE" width="605.0" />

    </children>

</AnchorPane>
