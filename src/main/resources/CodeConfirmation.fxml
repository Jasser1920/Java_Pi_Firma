<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CodeConfirmationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Enter Verification Code">
        <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
        </font>
    </Label>
    <TextField fx:id="codeField" promptText="Verification Code" style="-fx-background-color: #ffffff; -fx-border-color: #85c20a; -fx-border-width: 0 0 2 0;" />
    <Button text="Confirm" onAction="#handleConfirm" style="-fx-background-color: #85c20a; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
    <Label fx:id="infoLabel" textFill="red" />
</VBox>