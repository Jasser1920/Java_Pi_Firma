<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.DetailCategorieController">

    <children>

        <Label layoutX="128.0" layoutY="170.0" text="Nom de la catégorie:" />
        <ComboBox fx:id="categorieComboBox" layoutX="274.0" layoutY="166.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 1px 0px; -fx-border-color: #85C20A;" />

        <Button fx:id="btnModifier" layoutX="492.0" layoutY="325.0" prefWidth="80.0" style="-fx-background-color: #FFB524; -fx-background-radius: 20;" text="Modifier" textFill="#45595b" />
        <Button fx:id="btnAnnuler" layoutX="25.0" layoutY="324.0" prefWidth="80.0" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-background-color: #F8F8F8; -fx-border-color: #45595B;" text="Annuler" textFill="#45595b" />
        <Button fx:id="btnSupprimer" layoutX="405.0" layoutY="325.0" prefWidth="80.0"
                style="-fx-background-color: #FF6B6B; -fx-background-radius: 20;"
                text="Supprimer" textFill="WHITE" />
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#85c20a" height="33.0" layoutX="74.0" layoutY="24.0" stroke="#85c20a" strokeType="INSIDE" style="-fx-arc-height: 300; -fx-arc-width: 30;" width="516.0" />
        <Label fx:id="titreFx" layoutX="89.0" layoutY="29.0" text="Modifier une Catégorie" textFill="#f8f8f8">
            <font>
                <Font name="Arial Rounded MT Bold" size="20.0" />
            </font>
        </Label>
        <Button fx:id="retourFX" layoutX="30.0" layoutY="25.0" mnemonicParsing="false" style="-fx-background-color: #85C20A; -fx-background-radius: 100;" text="⬅" textAlignment="CENTER" textFill="WHITE" onAction="#retour">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#45595b" height="15.0" layoutY="385.0" stroke="#45595b" strokeType="INSIDE" width="605.0" />
    </children>

</AnchorPane>
