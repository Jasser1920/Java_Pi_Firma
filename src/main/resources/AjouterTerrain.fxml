<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConfirmLocationController">
    <children>
        <!-- Bandeau Titre -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#85c20a" height="40.0" width="400.0" stroke="#85c20a" strokeType="INSIDE" />
        <Label layoutX="20.0" layoutY="10.0" text="Confirmer la Location" textFill="WHITE">
            <font>
                <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
        </Label>

        <!-- Message -->
        <Label layoutX="20.0" layoutY="80.0" text="Tu peux louer ce terrain ?" style="-fx-font-size: 16px; -fx-text-fill: #333;">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
        </Label>

        <!-- Bouton Louer -->
        <Button fx:id="rentButton" layoutX="300.0" layoutY="150.0" onAction="#handleRent" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #FFB524; -fx-background-radius: 20;" text="Louer" textFill="#45595b">
            <font>
                <Font name="Arial Rounded MT Bold" size="14.0" />
            </font>
        </Button>

        <!-- Pied de page -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#45595b" height="15.0" layoutY="185.0" stroke="#45595b" strokeType="INSIDE" width="400.0" />
    </children>
</AnchorPane>