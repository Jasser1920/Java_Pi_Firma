<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminDashboardController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Admin Panel" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button fx:id="btnUser" text="Users" minWidth="120" />
            <Button fx:id="btnReclamation" text="Reclamations" minWidth="120" />
            <Button fx:id="btnProduct" text="Products" minWidth="120" />
            <VBox fx:id="customOptionsBox" spacing="5" />
        </VBox>
    </left>
    <center>
        <StackPane fx:id="mainContent" />
    </center>
</BorderPane>
