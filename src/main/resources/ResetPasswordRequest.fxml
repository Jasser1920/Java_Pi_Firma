<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="400.0" prefHeight="500.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResetPasswordRequestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Reset Password">
        <font>
            <Font name="Arial Rounded MT Bold" size="24.0" />
        </font>
    </Label>
    <TextField fx:id="emailField" promptText="Email" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #85c20a; -fx-border-width: 0 0 2 0;" />
    <Button text="Send Code" onAction="#sendCode" prefWidth="150.0" style="-fx-background-color: #85c20a; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
    <TextField fx:id="codeField" promptText="Confirmation Code" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #85c20a; -fx-border-width: 0 0 2 0;" />
    <Button text="Verify Code" onAction="#verifyCode" prefWidth="150.0" style="-fx-background-color: #85c20a; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />
    <Label fx:id="infoLabel" textFill="red" />
</VBox>