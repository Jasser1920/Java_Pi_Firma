<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterCategorieController">

    <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#45595b" height="15.0" layoutY="389.0" stroke="#45595b" strokeType="INSIDE" width="600.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#85c20a" height="33.0" layoutX="64.0" layoutY="30.0" stroke="#85c20a" strokeType="INSIDE" style="-fx-arc-height: 300; -fx-arc-width: 30;" width="516.0" />
        <Label layoutX="75.0" layoutY="32.0" text="Ajouter une Catégorie" textFill="#f8f8f8">
            <font>
                <Font name="Arial Rounded MT Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="134.0" layoutY="163.0" text="Nom de la catégorie:" />
        <ComboBox fx:id="categorieComboBox" layoutX="274.0" layoutY="158.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 1px 0px; -fx-border-color: #85C20A;" />

        <Button fx:id="btnAjouter" layoutX="482.0" layoutY="327.0" onAction="#ajouterCategorie" prefWidth="80.0" style="-fx-background-radius: 20; -fx-background-color: #FFB524;" text="Ajouter" textFill="#45595a" />
