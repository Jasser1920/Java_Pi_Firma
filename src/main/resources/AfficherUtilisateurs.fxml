<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<AnchorPane prefWidth="1280.0" prefHeight="860.0" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherUtilisateursController">
    <stylesheets>
        <URL value="@css/styles.css" />
    </stylesheets>
    <children>
        <!-- Title and Subtitle -->
        <Text text="Utilisateurs" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333333;"
              AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="40.0" />
        <Text text="Gérez tous vos utilisateurs." style="-fx-font-size: 14px; -fx-fill: #666666;"
              AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="70.0" />

        <!-- Search Bar -->
        <TextField fx:id="searchField" prefWidth="300.0" promptText="Rechercher un utilisateur..." onKeyReleased="#filterUtilisateurs"
                   styleClass="form-field"
                   AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="110.0" />

        <!-- Buttons -->
        <Button mnemonicParsing="false" onAction="#naviguerAjouterUtilisateur" text="Ajouter Utilisateur"
                styleClass="primary-button"
                AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="110.0" />

        <!-- TableView -->
        <TableView fx:id="tableView" styleClass="table-view"
                   AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="40.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nomColumn" prefWidth="100.0" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="100.0" text="Prénom" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="telephoneColumn" prefWidth="100.0" text="Téléphone" />
                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Rôle" />
                <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Actions" />
            </columns>
        </TableView>
    </children>
</AnchorPane>